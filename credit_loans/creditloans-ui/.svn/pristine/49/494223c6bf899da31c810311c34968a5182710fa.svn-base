<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../common/header.jsp"%>

<script type="text/javascript">

function query(page){
	$("#currentPage").val(page);
	$('#queryForm').submit();
}


function add(){
	window.location.href = "${pageContext.request.contextPath}/charger/info/add?stationId="+${chargerStationDto.id};
}

function edit(vehicleId){
	window.location.href = "${pageContext.request.contextPath}/charger/info/edit?chargerInfoId="+vehicleId;
}

function del(vehicleId){
	if (!confirm("确定删除该记录")) {
		return;
	}
	
	jQuery.ajax({
        type: 'POST',
        url: "${pageContext.request.contextPath}/charger/info/doDelete",
        data: "vehicleId="+vehicleId,
        success: function () {
        	alert("删除成功!");
        	window.location.href="${pageContext.request.contextPath}/charger/info/showList";
        },
        error: function (data) {
        	alert("删除车辆错误!");
        	/* var err_msg = data.responseText;
        	if(err_msg.indexOf("账户异常，请重新登录")) {
	        	alert("账户异常，请重新登录");
	        	window.location.href="${pageContext.request.contextPath}/login";
        	} else {
	        	alert("删除车辆错误!");
        	} */
        }
    });
}

//jquery.twbsPagination.js 分页功能
$(function(){
	var options = {
		totalPages:${chargerInfoPage.totalPage},
		startPage:${chargerInfoPage.currentPage},
		visiblePages: 5,
		first: '&#124;&lt;',
		prev: '&lsaquo;',
		next: '&rsaquo;',
		last: '&gt;&#124;',
        onPageClick: function (event, page) {
        	query(page);
        }
        
	}
	$('#page').twbsPagination(options);
	
})

//返回充电站管理
function goBack(){
	window.location.href = "${pageContext.request.contextPath}/charger/station/showList";
}

</script>
	<!-- 二级菜单 begin -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-shortcuts" id="sidebar-shortcuts">
				<div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
					<div class="icon-text"> <i class="icon-group"></i> <span> 车辆管理 </span></div>
				</div>
			</div>
			<!-- #sidebar-shortcuts -->
			<ul class="nav nav-list">
				<li class="active"> <a href="${pageContext.request.contextPath}/charger/station/showList"> <i class="icon-home"></i> <span class="menu-text">充电站信息 </span> </a> </li>
			</ul>
			<!-- /.nav-list -->
			<div class="sidebar-collapse" id="sidebar-collapse"> <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i> </div>
		</div>
		<!-- 二级菜单 end -->
	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">充电管理</a></li>
				<li class="active">充电桩信息</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					充电桩信息<small> <i class="icon-double-angle-right"></i>
						设置所有充电桩信息
					</small>
				</h1>
			</div><!-- /.page-header -->
			<div class="page-content">
			<div class="page-header">
				充电站名称：${chargerStationDto.name}
			</div><!-- /.page-header -->
			<div class="row">
				<div class="col-xs-12">
					<div class="table-responsive table-responsive-a">
						<div class="table-top-button">
							<button class="btn btn-success" onclick="add();">
								<i class="icon-plus-sign"></i> 添加
							</button>
							<button class="btn btn-danger" onclick="goBack()">
								<i class="icon-reply"></i> 返回
							</button> 
						</div>
						<div id="sample-table-2_wrapper" class="dataTables_wrapper">
							<div class="row">
								<form id="queryForm" action="${pageContext.request.contextPath}/" method="post">
									<input type="hidden" id ="currentPage"  name="currentPage" value="1"/>
									<div>
										<span >	
											<input type="text" name="" value="" placeholder="...充电桩名称" >
										</span>
										<span>
										<button style="height: 30px; width: 50px;color:#FFF;border:none; background-color:#42aaec;" onclick="query(1);">
											<i class="icon-search"></i>
										</button>
										</span>
									</div>
								</form>
							</div>
							<table id="enterprise_user_table"
								class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<th>编号</th>
										<th>充电机编号</th>
										<th>企业名称</th>
										<th>充电站状态</th>
										<th>是否激活</th>
										<th>制造商</th>
										<th>型号</th>
										<th>操作</th>
									</tr>
								</thead>
								<tbody>
								<c:forEach items="${chargerInfoPage.datas }" var="chargerInfo" varStatus="status">
									<tr>
							          <td>${((chargerInfoPage.currentPage*chargerInfoPage.pageSize)-chargerInfoPage.pageSize)+status.index + 1 }</td>
							          <td>${chargerInfo.chargerNo }</td>
							          <td>${chargerInfo.enterpriseName}</td>
							          <td>${chargerInfo.stateStr}</td>
							          <td>${chargerInfo.activeStr}</td>
							          <td>${chargerInfo.manufacturer}</td>
							          <td>${chargerInfo.model}</td>
							          <td>
							          	<div class="action-buttons">
											<a class="green" href="#" onclick="edit(${chargerInfo.id})"> <i class="icon-pencil bigger-130"></i></a>
											<a class="red" href="#" onclick="del(${chargerInfo.id})"> <i class="icon-trash bigger-130"></i></a>
										</div>
									  </td>
							        </tr>
						        </c:forEach>
								</tbody>
							</table>
							<!-- 分页      -->
							<div style="text-align: right;margin-top: -20px;">
					    		<ul id="page" class="pagination"></ul>
					    	</div>
						</div>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
		</div><!-- /.page-content -->
		
	</div><!-- /.main-content --> 
