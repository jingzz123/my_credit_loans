<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../common/header.jsp"%> 
<script type="text/javascript">

$().ready(function() {
	$("#chargerStationInfoForm").validate({
	    onkeyup: false,
		rules: {
			name:{
				required:true,
				rangelength:[2,32],
				isContainsSpecialChar:true
			},
			longitude:{
				required:true,
				isFloat: true,
				rangelength:[1,10]
			},
			latitude:{
				required:true,
				isFloat: true,
				rangelength:[1,10]
			},
			contact:{
				required:true,
				isPhone: true
			},
			address:{
				required: true,
				rangelength:[2,64],
				isContainsSpecialChar:true
			}
		},
		messages:{
			name:{
				required:"请输入充电站名称",
				rangelength:"充电站名称长度为2~32个字符",
				isContainsSpecialChar:"充电站名称只能由中文、英文、数字、“_”组成"
			},
			longitude:{
				required:"请输入经度",
				isFloat: "经度格式错误",
				rangelength:"经度长度不能超过10个字符"
			},
			latitude:{
				required:"请输入纬度",
				isFloat: "纬度格式错误",
				rangelength:"纬度长度不能超过10个字符"
			},
			contact:{
				required:"请输入充电站联系方式",
				isPhone: "充电站联系方式应为座机或手机号"
			},
			address:{
				required: "请输入充电站地址",
				rangelength:"充电站地址长度为2~64个字符",
				isContainsSpecialChar:"充电站地址只能由中文、英文、数字、“_”组成"
			}
		},
		errorPlacement: function(error, element) {
			error.appendTo(element.parent().siblings("span"));
		},
		submitHandler:function(){
			var chargerStationInfoJson = $('#chargerStationInfoForm').serializeObject();
			
			jQuery.ajax({
				type: "post",
			    url: "${pageContext.request.contextPath}/charger/station/doAdd",
			    contentType: "application/json",
			    data: JSON.stringify(chargerStationInfoJson),
			    success: function (chargerStationId) {
			    	if(chargerStationId>0){
				        alert("添加充电站成功！");
			    	}else{
			    		alert("添加充电站失败！");
			    		
			    	}
			    	window.location.href = "${pageContext.request.contextPath}/charger/station/showList";
			    },
			    error: function () {
			        alert("save chargerStation error");
			    }	
			});
		}
	});

});

function goback(){
	window.location.href = "${pageContext.request.contextPath}/charger/station/showList";
}
</script>
	<!-- 二级菜单 begin -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-shortcuts" id="sidebar-shortcuts">
				<div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
					<div class="icon-text"> <i class="icon-bolt"></i> <span> 充电管理 </span></div>
				</div>
			</div>
			<!-- #sidebar-shortcuts -->
			<ul class="nav nav-list">
				<li class="active"> <a href="${pageContext.request.contextPath}/charger/station/showList"> <i class="icon-home"></i> <span class="menu-text">充电站信息 </span> </a> </li>
			</ul>
			<!-- /.nav-list -->
			<div class="sidebar-collapse" id="sidebar-collapse"> <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i> </div>
		</div>
		<!-- 二级菜单 end -->
	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">充电管理</a></li>
				<li class="active">充电站信息</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					充电站信息<small> <i class="icon-double-angle-right"></i>
						添加充电站
					</small>
				</h1>
			</div><!-- /.page-header -->
			
			<div class="row">
				<div class="col-xs-12">
			    	<div class="col-md-12">
				    	<form id="chargerStationInfoForm" class="form-horizontal" >
							  <div class="form-group">
							    <label for="name" class="col-sm-4 control-label">充电站名称</label>
							    <div class="col-sm-3">
							      <input type="text" id="name" name="name" class="form-control" placeholder="输入充电站名称" >
							    </div>
							    <span id="error_name" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="longitude" class="col-sm-4 control-label">经度</label>
							    <div class="col-sm-3">
							      <input type="text" id="longitude" name="longitude" class="form-control" placeholder="输入经度">
							    </div>
							    <span id="error_longitude" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="latitude" class="col-sm-4 control-label">纬度</label>
							    <div class="col-sm-3">
							      <input type="text" id="latitude" name="latitude" class="form-control" placeholder="输入纬度">
							    </div>
							    <span id="error_latitude" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="contact" class="col-sm-4 control-label">联系方式</label>
							    <div class="col-sm-3">
							      <input type="text" id="contact" name="contact" class="form-control" placeholder="输入联系方式">
							    </div>
							    <span id="error_contact" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="address" class="col-sm-4 control-label">地址</label>
							    <div class="col-sm-3">
							      <input type="text" id="address" name="address" class="form-control" placeholder="输入地址">
							    </div>
							    <span id="error_address" style="color: red"></span>
							  </div>
							  
							  <div class="form-group">
							    <div class="col-sm-offset-4">
							      <input type="submit" class="btn btn-primary" value="保存"></input>
							      <input type="button" class="btn btn-success" value="返回" onclick="goback()"></input>
							    </div>
							  </div>
						</form>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
