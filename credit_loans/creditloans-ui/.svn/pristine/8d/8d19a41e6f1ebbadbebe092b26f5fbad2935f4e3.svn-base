<%@ include  file="./../../common/footer.jsp"%>
<script type="text/javascript">
	$(function(){
		 $("#busStopForm").validate({  
			 submitHandler: function(form) 
			   {  
			     $.ajax({
			    	  type:"POST",
			    	   url:"${pageContext.request.contextPath}",
			    	   data:$("#busStopForm").serialize(),
			    	   success:function(msg){
			    		   if(msg){
			    			   alert("保存数据成功");
			    			   goback();
			    		   }else{
			    			   alert("保存数据失败");
			    		   }
			    	   }
			      });
			   }  
			 })	 
	});

	function goback(){
		window.location.href = window.location.href="${pageContext.request.contextPath}/charger/info/showList?stationId="+${stationId};
	}
	
	function addBusStop(){
	    var formGroupSize = $("#busStopForm div[class=form-group]").size();
	    if(formGroupSize >= 10){
	    	alert("批量输入的信息最大10条");
	    	return;
	    }
	    var strHtml = "<div class='form-group'>"+
	   					   "<div class='col-sm-2'>"+
							   "<input id='' name='' type='text' data-rule-required='true' class='form-control' placeholder='...充电桩编号'/>"+
		   				   "</div>"+
   	   					   "<div class='col-sm-2'>"+
   								"<input id='' name='' type='text' data-rule-required='true' class='form-control' placeholder='...充电桩序列'/>"+
   	  					   "</div>"+
   	  					   "<div class='col-sm-2'>"+
   	  					       "<select class='form-control'>"+
   	  					           "<option value='1'>直流</option>"+
   	   							   "<option value='2'>交流</option>"+
   	   		                   "</select>"+
   	   		               "</div>"+
   	   		               "<div class='col-sm-2'>"+
   	   		                   "<input id='' name='' type='text' data-rule-required='true' class='form-control' placeholder='...充电桩型号'/>"+
   	   		               "</div>"+    
   	   					   "<div class='col-sm-4'>"+
   	   							"<input id='' name='' type='text' data-rule-required='true' class='form-control' placeholder='...制造商' />"+
   	   					   "</div>"+
   	   				"</div>"; 
	    $("#insert-input-group").before(strHtml)
	}
	
</script>