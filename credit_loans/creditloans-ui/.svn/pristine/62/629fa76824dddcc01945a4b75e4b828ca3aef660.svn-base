<script>
$(function(){
	var options = {
		totalPages:${evBusLines.totalPage},
		startPage:${evBusLines.currentPage},
		visiblePages: 5,
		first: '&#124;&lt;',
		prev: '&lsaquo;',
		next: '&rsaquo;',
		last: '&gt;&#124;',
        onPageClick: function (event, page) {
        	
        }
	}
	$('#page').twbsPagination(options);
});

//添加线路信息
function addBusLineInfo(){
	window.location.href = "${pageContext.request.contextPath}/enterprise/bus/line/busLineInput";
}

//删除线路信息
function deleteBusLine(id){
	if(window.confirm("你确定要删除该条记录")){
		$.ajax({
			type:"POST",
			url:"${pageContext.request.contextPath}/enterprise/bus/line/deleteBusLine",
			data:{"id":id},
			success:function(isSucc){
				if(isSucc == 0){
					alert("删除成功");
					window.location.reload(true);
				}else if(isSucc == 1){
					alert("删除失败");
				}else{
					alert("已关车辆信息无法删除");
				}
			}
		});	
	}
}

//更新线路信息
function updateBusLine(id){
	window.location.href = "${pageContext.request.contextPath}/enterprise/bus/line/updateBusLine?id="+id;
}

function query(page){
	$("#currentPage").val(page);
	$('#queryForm').submit();
}
</script>
