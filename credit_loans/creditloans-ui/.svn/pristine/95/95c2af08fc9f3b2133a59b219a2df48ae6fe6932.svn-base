<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../common/header.jsp"%> 
<script type="text/javascript">

$().ready(function() {
	$("#manufacturerInfoForm").validate({
	    onkeyup: false,
		rules: {
			name:{
				required:true,
				rangelength:[2,64],
				isContainsSpecialChar:true
			},
			phone:{
				required:true,
				isPhone: true
			},
			address:{
				required: true,
				rangelength:[2,64],
				isContainsSpecialChar:true
			},
			postcode:{
				required:true,
				isZipCode: true
			}
		},
		messages:{
			name:{
				required:"请输入厂家名称",
				rangelength:"厂家名称长度为2~64个字符",
				isContainsSpecialChar:"厂家名称只能由中文、英文、数字、“_”组成"
			},
			phone:{
				required:"请输入厂家联系电话",
				isPhone: "请输入正确的座机或手机号码"
			},
			address:{
				required: "请输入厂家地址",
				rangelength:"厂家地址长度为2~64个字符",
				isContainsSpecialChar:"厂家地址只能由中文、英文、数字、“_”组成"
			},
			postcode:{
				required:"请输入邮政编码",
				isZipCode: "请输入正确格式的邮政编码"
			}
		},
		errorPlacement: function(error, element) {
			error.appendTo(element.parent().siblings("span"));
		},
		submitHandler:function(){
			var manufacturerInfoJson = $('#manufacturerInfoForm').serializeObject();
			
			jQuery.ajax({
				type: "post",
			    url: "${pageContext.request.contextPath}/ev/manufacturer/doAdd",
			    contentType: "application/json",
			    data: JSON.stringify(manufacturerInfoJson),
			    success: function (manufacturerId) {
			    	if(manufacturerId>0){
				        alert("添加车辆生产厂家成功！");
			    	}else{
			    		alert("添加车辆生产厂家失败！");
			    		
			    	}
			    	window.location.href = "${pageContext.request.contextPath}/ev/manufacturer/showList";
			    },
			    error: function () {
			        alert("save manufacturer error");
			    }	
			});
		}
	});

});

function goback(){
	window.location.href = "${pageContext.request.contextPath}/ev/manufacturer/showList";
}
</script>
