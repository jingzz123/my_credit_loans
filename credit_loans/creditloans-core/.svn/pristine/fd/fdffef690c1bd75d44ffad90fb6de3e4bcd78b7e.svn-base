<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="cn.creditloans.core.dao.af.RulesetRuleDao">

	<resultMap id="resultMap" type="cn.creditloans.core.entity.af.RulesetRule">
        <id property="id" column="id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<result property="rulesetId" column="ruleset_id" />
		<result property="preconditions" column="preconditions" />
		<result property="conditions" column="conditions" />
		<result property="actions" column="actions" />
		<result property="isUsed" column="is_used" />
		<result property="sequence" column="sequence" />
		<result property="createUserId" column="create_user_id" />
		<result property="createTime" column="create_time" />
		<result property="upadteUserId" column="upadte_user_id" />
		<result property="updateTime" column="update_time" />
    </resultMap>
    
    <!-- 插入单个 -->
    <insert id="insert" parameterType="cn.creditloans.core.entity.af.RulesetRule">
    	<selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">
		    SELECT currval('af_ruleset_rule_id_seq')
		</selectKey>
 		INSERT INTO af_ruleset_rule (name,description,ruleset_id,preconditions,
 			conditions,actions,is_used,sequence,create_user_id,
 			create_time,upadte_user_id,update_time)
		ALUES (#{name}, #{description}, #{rulesetId}, #{preconditions}, 
			#{conditions}, #{actions}, #{isUsed}, #{sequence}, #{createUserId},
			now(), #{upadteUserId}, now());
    </insert>
    
    <!-- 修改单个 -->
    <update id="update"  parameterType="cn.creditloans.core.entity.af.RulesetRule">
    	update af_ruleset_rule set name = #{name}, description = #{description}, 
    	            conditions = #{conditions}, preconditions = #{preconditions}, 
    	            actions = #{actions}, is_used = #{isUsed}, 
    	            sequence = #{sequence}, upadte_user_id = #{upadteUserId},
					update_time = now() where id = #{id}
    </update>
    
    <!-- 删除单个 -->
    <delete id="delete" parameterType="int">
    	delete from af_ruleset_rule where id = #{id} 
    </delete>
    
    <!-- 查询单个 -->
    <select id="select" resultMap="resultMap" parameterType="int">
    	select * from af_ruleset_rule where id = #{id} 
    </select>
    
    <!-- 查询所有 -->
    <select id="selectAll" resultMap="resultMap" parameterType="int">
    	select * from af_ruleset_rule
    </select>
    
	<!-- 查询总量，这里的需要根据实际条件进行查询 -->
	<select id="selectPageCount" resultType="int" parameterType="cn.creditloans.core.entity.af.RulesetRule">
        select count(1) FROM af_ruleset_rule
    </select>
    
    <!-- 根据实际情况需要修改语句 -->
    <select id="selectPageList" resultMap="resultMap">
         select * from af_ruleset_rule
         limit #{pm.pageSize} offset #{pm.startCount}
    </select>

</mapper>