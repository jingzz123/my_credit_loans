<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="cn.creditloans.core.dao.UploadSummariesDao">

	<resultMap id="uploadSummariesResultMap" type="cn.creditloans.core.entity.enterprise.UploadSummaries">
        <id property="id" column="id" />
        <result property="uploadedOn" column="uploaded_on"/>
        <result property="recordCount" column="record_count"/>
        <result property="validatedRecordCount" column="validated_record_count"/>
        <result property="depId" column="dep_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="fileName" column="filename"/>
    </resultMap>
    
    <insert id="saveUploadSummaries" parameterType="cn.creditloans.core.entity.enterprise.UploadSummaries">
    	insert into upload_summaries (uploaded_on, record_count, validated_record_count, dep_id, user_id, 
    		create_time, update_time, fileName)
    	VALUES
    		(#{uploadedOn}, #{recordCount}, #{validatedRecordCount}, #{depId}, #{userId}, 
    		now(), now(), #{fileName})
    </insert>
</mapper>