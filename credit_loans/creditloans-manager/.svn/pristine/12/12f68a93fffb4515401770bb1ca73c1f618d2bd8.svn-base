<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../../common/header.jsp"%> 
<script type="text/javascript">

$().ready(function() {
	$("#relationInfoForm").validate({
	    onkeyup: false,
	    rules: {
	    	childSchemaId:{
				required:true,
			    remote:{
					url:"${pageContext.request.contextPath}/regulation/metadata/relation/checkSchemaName",
					type: "post",
				    dataType: "json",
				    data: {
				    	childSchemaId : function() {
				        	return $("#childSchemaId_select option:selected").val();
				        },
				    	mainSchemaId: function() {
				            return $("#mainSchemaId").val();
				        },
				        oldChildSchemaId : function() {
				        	return $("#oldChildSchemaId").val();
				        },
				        oldMainSchemaId: function() {
				            return $("#oldMainSchemaId").val();
				        }
				    },
				}
			}, 
			sequence:{
				required:true,
				remote:{
					url:"${pageContext.request.contextPath}/regulation/metadata/relation/checkSequence",
					type: "post",
				    dataType: "json",
				    data: {
				    	sequence: function() {
				            return $("#sequence").val();
				        },
				        oldSequence:function() {
				        	return $("#oldSequence").val();
				        }
				    },
				}
			}
		},
		messages:{
			childSchemaId:{
				required:"请输入schema名称",
			    remote:"该schema名称已存在！"
			}, 
			sequence:{
				required:"请输入squence",
				remote:"该squence已存在！"
			}
		},
		errorPlacement: function(error, element) {
			$( element ).closest( "form" ).find( "span[id='error_" + element.attr( "name" ) + "']" ).append( error );
		},
		submitHandler:function(){
			var relationInfoForm = $('#relationInfoForm').serializeObject();
			jQuery.ajax({
				type: "post",
			    url: "${pageContext.request.contextPath}/regulation/metadata/relation/doAdd",
			    contentType: "application/json",
			    data: JSON.stringify(relationInfoForm),
			    success: function (mainSchemaId) {
			    	if(mainSchemaId>0){
				        alert("添加relation成功！");
			    	}else{
			    		alert("添加relation失败！");
			    		
			    	}
			    	window.location.href = "${pageContext.request.contextPath}/regulation/metadata/relation/showList?mainSchemaId=${mainSchemaId}";
			    },
			    error: function () {
			        alert("save regulation relation error");
			    }	
			});
		}
	});
});


function goback(){
	window.location.href = "${pageContext.request.contextPath}/regulation/metadata/relation/showList?mainSchemaId=${mainSchemaId}";
}
</script>

	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">规则管理</a></li>
				<li class="active">relation管理</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					relation管理 <small> <i class="icon-double-angle-right"></i>
						添加relation
					</small>
				</h1>
			</div><!-- /.page-header -->
			
			<div class="row">
				<div class="col-xs-12">
			    	<div class="col-md-12">
				    	<form id="relationInfoForm" class="form-horizontal" >
				    	<fieldset>
							  <!-- 子schema选择 begin -->
							  <div class="form-group">
							    <label for="name" class="col-sm-4 control-label">子schema</label>
							    <div class="col-sm-3">
								<select class="form-control" id="childSchemaId_select" name="childSchemaId" >
									 <option value="">- 子schema -</option>
							    		<c:forEach items="${metadataSchemaDTOList}" var="child" varStatus="status">
							    		<option value="${child.id}">${child.name}</option>
							    		</c:forEach>
								</select>
								</div>
							    <span id="error_childSchemaId" style="color: red"></span>
							  </div>
							    <!-- 子schema选择  end-->
							   <div class="form-group">
							   <label for="sequence" class="col-sm-4 control-label">次序号</label>
							    <div class="col-sm-3">
							      <input type="text" id="sequence" name="sequence" class="form-control" placeholder="输入次序号">
							    </div>
							    <span id="error_sequence" style="color: red"></span>
							    </div>
						</fieldset>
							 <input type="hidden" id="mainSchemaId" name="mainSchemaId" value="${mainSchemaId }">
							 <input type="hidden" id="oldMainSchemaId" name="oldMainSchemaId" value="${metadataRelationDTO.oldMainSchemaId }">
							 <input type="hidden" id="oldChildSchemaId" name="oldChildSchemaId" value="${metadataRelationDTO.oldChildSchemaId}">
							 <input type="hidden" id="oldSequence" name="oldSequence" value="${metadataRelationDTO.oldSequence}">
							  <div class="form-group">
							    <div class="col-sm-offset-4">
							      <input type="submit" class="btn btn-primary" value="保存"></input>
							      <input type="button" class="btn btn-success" value="返回" onclick="goback()"></input>
							    </div>
							  </div>
						</form>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
		</div><!-- /.page-content -->
		
	</div><!-- /.main-content --> 
<%@ include  file="./../../../common/footer.jsp"%>