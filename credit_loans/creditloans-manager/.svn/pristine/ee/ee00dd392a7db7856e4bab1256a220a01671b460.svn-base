<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../common/header.jsp"%> 
<script type="text/javascript">

$().ready(function() {
	$("#classInfoForm").validate({
	    onkeyup: false,
		rules: {
			className:{
				required:true,
				rangelength:[2,16],
				isContainsSpecialChar:true
			},
			classCode:{
			    required: true,
			    isInteger: true,
			    rangelength:[1,8],
			    remote:{
					url:"${pageContext.request.contextPath}/alarm/class/checkCode",
					type: "post",
				    dataType: "json",
				    data: {
				    	classCode: function() {
				            return $("#classCode").val();
				        }
				    }
				}
			}
		},
		messages:{
			className:{
				required:"请输入报警分类名称",
				rangelength:"报警分类名称长度为2~16个字符",
				isContainsSpecialChar:"报警分类名称只能由中文、英文、数字、“_”组成"
			},
			classCode:{
			    required: "请输入报警分类编码",
			    isInteger:"请填写正确的 报警分类编码",
			    rangelength:"报警分类编码长度不得超过8位",
			    remote:"报警分类编码已存在请重新输入"
			}
		},
		errorPlacement: function(error, element) {
			error.appendTo(element.parent().siblings("span"));
		},
		submitHandler:function(){
			var classInfoJson = $('#classInfoForm').serializeObject();
			
			jQuery.ajax({
				type: "post",
			    url: "${pageContext.request.contextPath}/alarm/class/doAdd",
			    contentType: "application/json",
			    data: JSON.stringify(classInfoJson),
			    success: function (alarmClassId) {
			    	if(alarmClassId>0){
				        alert("添加报警分类成功！");
			    	}else{
			    		alert("添加报警分类失败！");
			    		
			    	}
			    	window.location.href = "${pageContext.request.contextPath}/alarm/class/showList";
			    },
			    error: function () {
			        alert("save alarm class error");
			    }	
			});
		}
	});

});

function goback(){
	window.location.href = "${pageContext.request.contextPath}/alarm/class/showList";
}
</script>
	<!-- 二级菜单 begin -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-shortcuts" id="sidebar-shortcuts">
				<div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
					<div class="icon-text"> <i class="icon-warning-sign"></i> <span> 报警设置 </span></div>
				</div>
			</div>
			<!-- #sidebar-shortcuts -->
			<ul class="nav nav-list">
				<li class="active"> <a href="${pageContext.request.contextPath}/alarm/class/showList"> <i class="icon-th-large"></i> <span class="menu-text"> 报警分类 </span> </a> </li>
				<li> <a href="${pageContext.request.contextPath}/alarm/item/showList"> <i class="icon-list"></i> <span class="menu-text"> 报警项 </span> </a> </li>	
			</ul>
			<!-- /.nav-list -->
			<div class="sidebar-collapse" id="sidebar-collapse"> <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i> </div>
		</div>
		<!-- 二级菜单 end -->
	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">报警设置</a></li>
				<li class="active">报警分类</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					报警分类 <small> <i class="icon-double-angle-right"></i>
						添加报警分类
					</small>
				</h1>
			</div><!-- /.page-header -->
			
			<div class="row">
				<div class="col-xs-12">
			    	<div class="col-md-12">
				    	<form id="classInfoForm" class="form-horizontal" >
							  <div class="form-group">
							    <label for="className" class="col-sm-4 control-label">报警分类名称</label>
							    <div class="col-sm-3">
							      <input type="text" id="className" name="className" class="form-control" placeholder="输入报警分类名称" >
							    </div>
							    <span id="error_className" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="classCode" class="col-sm-4 control-label">报警分类编码</label>
							    <div class="col-sm-3">
							      <input type="text" id="classCode" name="classCode" class="form-control" placeholder="输入报警分类编码">
							    </div>
							    <span id="error_classCode" style="color: red"></span>
							  </div>
							  
							  <div class="form-group">
							    <div class="col-sm-offset-4">
							      <input type="submit" class="btn btn-primary" value="保存"></input>
							      <input type="button" class="btn btn-success" value="返回" onclick="goback()"></input>
							    </div>
							  </div>
						</form>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
		</div><!-- /.page-content -->
		
