<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../common/header.jsp"%> 
<script type="text/javascript">

$().ready(function() {
	$("#itemInfoForm").validate({
	    onkeyup: false,
		rules: {
			typeName:{
				required:true,
				rangelength:[2,16],
				isContainsSpecialChar:true
			},
			classId:{
				min:1
			}
		},
		messages:{
			typeName:{
				required:"请输入报警类型名称",
				rangelength:"报警类型名称长度为2~16个字符",
				isContainsSpecialChar:"报警类型名称只能由中文、英文、数字、“_”组成"
			},
			classId:{
				min:"请选择报警分类"
			}
		},
		errorPlacement: function(error, element) {
			error.appendTo(element.parent().siblings("span"));
		},
		submitHandler:function(){
			var itemInfoJson = $('#itemInfoForm').serializeObject();
			
			jQuery.ajax({
				type: "post",
			    url: "${pageContext.request.contextPath}/alarm/item/doAdd",
			    contentType: "application/json",
			    data: JSON.stringify(itemInfoJson),
			    success: function () {
			    	alert("修改报警类型成功！");
			    	window.location.href = "${pageContext.request.contextPath}/alarm/item/showList";
			    },
			    error: function () {
			        alert("edit alarm item error");
			    }	
			});
		}
	});

});

function goback(){
	window.location.href = "${pageContext.request.contextPath}/alarm/item/showList";
}
</script>
	<!-- 二级菜单 begin -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-shortcuts" id="sidebar-shortcuts">
				<div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
					<div class="icon-text"> <i class="icon-warning-sign"></i> <span> 报警设置 </span></div>
				</div>
			</div>
			<!-- #sidebar-shortcuts -->
			<ul class="nav nav-list">
				<li> <a href="${pageContext.request.contextPath}/alarm/class/showList"> <i class="icon-th-large"></i> <span class="menu-text"> 报警分类 </span> </a> </li>
				<li class="active"> <a href="${pageContext.request.contextPath}/alarm/item/showList"> <i class="icon-list"></i> <span class="menu-text"> 报警项 </span> </a> </li>	
			</ul>
			<!-- /.nav-list -->
			<div class="sidebar-collapse" id="sidebar-collapse"> <i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i> </div>
		</div>
		<!-- 二级菜单 end -->
	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">报警设置</a></li>
				<li class="active">报警项</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					报警项 <small> <i class="icon-double-angle-right"></i>
						修改报警项
					</small>
				</h1>
			</div><!-- /.page-header -->
			
			<div class="row">
				<div class="col-xs-12">
			    	<div class="col-md-12">
				    	<form id="itemInfoForm" class="form-horizontal" >
							  <div class="form-group">
							    <label for="typeName" class="col-sm-4 control-label">报警类型名称</label>
							    <div class="col-sm-3">
							      <input type="text" id="typeName" name="typeName" class="form-control" value="${alarmItemDto.typeName }" placeholder="输入报警类型名称" >
							    </div>
							    <span id="error_typeName" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="alarmCode" class="col-sm-4 control-label">报警类型编码</label>
							    <div class="col-sm-3">
							      <input type="text" id="alarmCode" name="alarmCode" class="form-control" value="${alarmItemDto.alarmCode }" readonly="readonly" placeholder="输入报警类型编码">
							    </div>
							    <span id="error_alarmCode" style="color: red"></span>
							  </div>
							  <div class="form-group">
							    <label for="classId" class="col-sm-4 control-label">报警分类</label>
							    <div class="col-sm-3">							    
							    	<select id="class_select" name="classId">
							    		<option value="0">- 选择分类 -</option>
							    		<c:forEach items="${alarmClassDtoList}" var="class">
								    		<c:if test="${alarmItemDto.classId == class.id}">
								    			<option value="${class.id}" selected="selected">${class.className}</option>
								    		</c:if>
								    		<c:if test="${alarmItemDto.classId != class.id}">
								    			<option value="${class.id}">${class.className}</option>
								    		</c:if>
							    		</c:forEach>
							    	</select>
							    </div>
							    <span id="error_class" style="color: red"></span>
							  </div>
							  
							  <input type="hidden" name="id" value="${alarmItemDto.id }">
							  
							  <div class="form-group">
							    <div class="col-sm-offset-4">
							      <input type="submit" class="btn btn-primary" value="保存"></input>
							      <input type="button" class="btn btn-success" value="返回" onclick="goback()"></input>
							    </div>
							  </div>
						</form>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
		</div><!-- /.page-content -->
		
	</div><!-- /.main-content --> 
<%@ include  file="./../../common/footer.jsp"%>