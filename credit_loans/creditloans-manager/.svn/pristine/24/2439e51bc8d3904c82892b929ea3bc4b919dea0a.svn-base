<%@ page language="java" contentType="text/html; charset=utf-8"  pageEncoding="utf-8"%>
<%@ include  file="./../../../common/header.jsp"%>

<script type="text/javascript">

function query(page){
	$("#currentPage").val(page);
	$('#queryForm').submit();
}

function add(mainSchemaId){
	window.location.href = "${pageContext.request.contextPath}/regulation/metadata/relation/add?mainSchemaId="+mainSchemaId;
}

function edit(mainSchemaId, childSchemaId){
	window.location.href = "${pageContext.request.contextPath}/regulation/metadata/relation/edit?mainSchemaId="+mainSchemaId+"&childSchemaId="+childSchemaId;
}

function del(mainSchemaId, childSchemaId){
	if (!confirm("是否删除该relation?")) {
		return;
	}
	
	jQuery.ajax({
        type: 'POST',
        url: "${pageContext.request.contextPath}/regulation/relation/doDelete",
        data: "mainSchemaId="+mainSchemaId+"&childSchemaId="+childSchemaId,
        success: function () {
        	alert("删除成功!");
        	window.location.href="${pageContext.request.contextPath}/regulation/metadata/relation/showList?mainSchemaId="+mainSchemaId;
        },
        error: function (data) {
        	alert("删除relation错误!");
        }
    });
}

//jquery.twbsPagination.js 分页功能
$(function(){
	var options = {
		totalPages:${metadataRelationPage.totalPage},
		startPage:${metadataRelationPage.currentPage},
		visiblePages: 5,
		first: '&#124;&lt;',
		prev: '&lsaquo;',
		next: '&rsaquo;',
		last: '&gt;&#124;',
        onPageClick: function (event, page) {
        	query(page);
        }
        
	}
	$('#page').twbsPagination(options);
	
})
function goBack(){
	window.location.href = "${pageContext.request.contextPath}/regulation/metadata/schema/showList";
}

</script>

	<div class="main-content">
		<div class="breadcrumbs" id="breadcrumbs">
			<ul class="breadcrumb">
				<li><i class="icon-home home-icon"></i> <a href="#">首页</a></li>
				<li><a href="#">规则管理</a></li>
				<li class="active">relation管理</li>
			</ul>
			<!-- .breadcrumb -->
		</div>
		
		<div class="page-content">
			<div class="page-header">
				<h1>
					relation管理<small> <i class="icon-double-angle-right"></i>
						设置所有relation的信息
					</small>
				</h1>
			</div><!-- /.page-header -->
			
			<div class="row">
				<div class="col-xs-12">
					<div class="table-responsive table-responsive-a">
						<div class="table-top-button">
							<button class="btn btn-success" onclick="add(${queryDto.mainSchemaId});">
								<i class="icon-plus-sign"></i> 添加
							</button>  
							<button class="btn btn-danger" onclick="goBack()">
							<i class="icon-reply"></i> 返回
						</button> 
						</div>
						<div id="sample-table-2_wrapper" class="dataTables_wrapper">
							<div class="row">
								<form class="form-inline" id="queryForm" action="${pageContext.request.contextPath}/regulation/metadata/relation/showList" method="post">
									<input type="hidden" id ="currentPage"  name="currentPage" value="1"/>
									<input type="hidden" id="mainSchemaId" name="mainSchemaId"	value="${queryDto.mainSchemaId}" />
									<div class="form-group">
									    <select class="form-control" id="childSchemaId_select" name="childSchemaId" >
									 	<option value="0">- 子schema名称 -</option>
							    		<c:forEach items="${metadataRelationDTOList}" var="child" varStatus="status">
							    			<option  value="${child.id}" <c:if test="${child.id == queryDto.childSchemaId }">selected</c:if>>${child.name}</option>
							    		</c:forEach>
									</select>
									</div>
									<div class="form-group">
										<button style="height: 30px; width: 50px;color:#FFF;border:none; background-color:#42aaec;" onclick="query(1);">
											<i class="icon-search"></i>
										</button>
									</div>
								</form>
							</div>
							<table id="platform_user_table"
								class="table table-striped table-bordered table-hover">
								<thead>
									<tr>
										<th>编号</th>
										<th>子schema名称</th>
										<th>次序号</th>
										<th>操作</th>
									</tr>
								</thead>
								<tbody>
								<c:forEach items="${metadataRelationPage.datas }" var="relation" varStatus="status">
									<tr>
							          <td>${((metadataRelationPage.currentPage*metadataRelationPage.pageSize)-metadataRelationPage.pageSize)+status.index + 1 }</td>
							          <td>${relation.name }</td>
							          <td>${relation.sequence }</td>
							          <td>
							          	<div class="action-buttons">
											<a class="green" href="#" onclick="edit(${queryDto.mainSchemaId},${relation.id})"> <i class="icon-pencil bigger-130"></i></a>
											<a class="red" href="#" onclick="del(${queryDto.mainSchemaId},${relation.id})"> <i class="icon-trash bigger-130"></i></a>
										</div>
									  </td>
							        </tr>
						        </c:forEach>
								</tbody>
							</table>
							<!-- 分页      -->
							<div style="text-align: right;margin-top: -20px;">
					    		<ul id="page" class="pagination"></ul>
					    	</div>
						</div>
					</div>
				</div>
				 
			</div> <!-- class:row -->
			
		</div><!-- /.page-content -->
		
	</div><!-- /.main-content --> 
<%@ include  file="./../../../common/footer.jsp"%>